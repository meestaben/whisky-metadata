{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://casknet.org/schema/cask-types.schema.json",
  "title": "Cask types reference",
  "type": "array",
  "items": {
    "allOf": [
      {
        "$ref": "https://casknet.org/schema/base.schema.json"
      },
      {
        "type": "object",
        "properties": {
          "meta": {
            "type": "object",
            "properties": {
              "meta": {
                "type": "object",
                "properties": {
                  "category": {
                    "type": "string",
                    "description": "Broad size/usage class for the cask (e.g. small, standard, large)."
                  },
                  "capacity_l_min": {
                    "type": "number",
                    "description": "Minimum typical capacity in litres for this cask type."
                  },
                  "capacity_l_max": {
                    "type": "number",
                    "description": "Maximum typical capacity in litres for this cask type."
                  }
                },
                "required": [
                  "category",
                  "capacity_l_min",
                  "capacity_l_max"
                ],
                "additionalProperties": false
              }
            }
          }
        }
      }
    ]
  }
}
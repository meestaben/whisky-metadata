{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://casknet.org/schema/regions.schema.json",
  "title": "Regions reference",
  "type": "array",
  "items": {
    "allOf": [
      {
        "$ref": "https://casknet.org/schema/base.schema.json"
      },
      {
        "type": "object",
        "properties": {
          "meta": {
            "type": "object",
            "properties": {
              "country": {
                "type": "string",
                "minLength": 2,
                "maxLength": 2,
                "description": "ISO 3166-1 alpha-2 country code"
              },
              "notes": {
                "type": "string"
              }
            },
            "required": [
              "country"
            ],
            "additionalProperties": false
          }
        }
      }
    ]
  }
}
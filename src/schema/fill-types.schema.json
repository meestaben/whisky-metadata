{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://casknet.org/schema/fill-types.schema.json",
  "title": "Fill types reference",
  "type": "array",
  "items": {
    "allOf": [
      {
        "$ref": "https://casknet.org/schema/base.schema.json"
      },
      {
        "type": "object",
        "properties": {
          "meta": {
            "type": "object",
            "properties": {
              "fill_number": {
                "type": [
                  "integer",
                  "null"
                ],
                "minimum": 0,
                "description": "0 = virgin, 1 = first fill, 2 = second fill, etc. Null means unspecified refill."
              }
            },
            "additionalProperties": false
          }
        }
      }
    ]
  }
}
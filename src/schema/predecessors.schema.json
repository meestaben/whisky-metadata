{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://casknet.org/schema/predecessors.schema.json",
  "title": "Predecessor reference",
  "type": "array",
  "items": {
    "allOf": [
      {
        "$ref": "https://casknet.org/schema/base.schema.json"
      },
      {
        "type": "object",
        "properties": {
          "meta": {
          "type": "object",
          "properties": {
            "category": {
              "type": "string",
              "description": "High-level category (e.g. whiskey, sherry, wine, fortified-wine, rum, brandy, spirit, beer, none)."
            },
            "origin_country": {
              "type": "string",
              "description": "ISO 3166-1 alpha-2 country code where the predecessor liquid originates (e.g. US, ES, PT). May be empty for category 'none'."
            }
          },
          "required": [
            "category",
            "origin_country"
          ],
          "additionalProperties": false
        }
        }
      }
    ]
  }
}
